{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "/opt/nodejs/*": ["../lambda-layers/data-repositories/nodejs/nodejs/*"]
    }
  },
  "files": [
    "layer-types.d.ts",
    "handler.ts",
    "handlers/guests.ts",
    "handlers/messages.ts",
    "handlers/properties.ts",
    "handlers/reservations.ts",
    "handlers/staff.ts",
    "handlers/tasks.ts"
  ]
}
